{
  "name": "scorpio",
  "displayName": "scorpio",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "media/artemis_logo.png",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "authentication": [
      {
        "id": "artemis",
        "label": "Artemis"
      }
    ],
    "configuration": {
      "title": "Scorpio",
      "properties": {
        "scorpio.apiBaseUrl": {
          "description": "The base URL of the Artemis Server",
          "type": "string",
          "editPresentation": "singlelineText",
          "default": "http://localhost:8080"
        },
        "scorpio.clientBaseUrl": {
          "description": "The URL of the Artemis Client",
          "type": "string",
          "editPresentation": "singlelineText",
          "default": "http://localhost:9000"
        },
        "scorpio.userData.username": {
          "description": "The username for login to Artemis",
          "editPresentation": "singlelineText",
          "type": "string",
          "default": "artemis_admin"
        },
        "scorpio.userData.password": {
          "description": "The password for login to Artemis",
          "editPresentation": "singlelineText",
          "type": "string",
          "default": "artemis_admin"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "artemis-sidebar-view",
          "title": "Artemis",
          "icon": "media/artemis_logo.svg"
        }
      ]
    },
    "views": {
      "artemis-sidebar-view": [
        {
          "type": "webview",
          "id": "artemis-sidebar",
          "name": "Artemis",
          "icon": "media/checklist.svg",
          "contextualTitle": "Artemis"
        }
      ]
    },
    "commands": [
      {
        "command": "scorpio.selectExercise",
        "category": "Artemis",
        "title": "Select Exercise"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.90.0",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-web": "^0.0.54",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "fetch-cookie": "^3.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ls1intum/scorpio.git"
  }
}
