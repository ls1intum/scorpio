{
  "name": "artemis-scorpio",
  "displayName": "Artemis - Scorpio",
  "description": "",
  "publisher": "tum-aet",
  "icon": "media/artemis_logo.png",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/extension.js",
  "main": "./dist/extension.js",
  "contributes": {
    "authentication": [
      {
        "id": "artemis",
        "label": "Artemis"
      }
    ],
    "configuration": {
      "title": "Scorpio",
      "properties": {
        "scorpio.apiBaseUrl": {
          "description": "The base URL of the Artemis Server",
          "type": "string",
          "editPresentation": "singlelineText",
          "default": "http://localhost:8080"
        },
        "scorpio.clientBaseUrl": {
          "description": "The URL of the Artemis Client",
          "type": "string",
          "editPresentation": "singlelineText",
          "default": "http://localhost:9000"
        },
        "scorpio.userData.username": {
          "description": "The username for login to Artemis",
          "editPresentation": "singlelineText",
          "type": "string",
          "default": "artemis_admin"
        },
        "scorpio.userData.password": {
          "description": "The password for login to Artemis",
          "editPresentation": "singlelineText",
          "type": "string",
          "default": "artemis_admin"
        },
        "scorpio.userData.defaultRepoPath": {
          "description": "The default to search for and clone repositories into - has to be an absolute path",
          "editPresentation": "singlelineText",
          "type": "string"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "artemis-sidebar-view",
          "title": "Artemis",
          "icon": "media/artemis_logo.svg"
        }
      ]
    },
    "views": {
      "artemis-sidebar-view": [
        {
          "type": "webview",
          "id": "artemis-sidebar",
          "name": "Artemis",
          "icon": "media/checklist.svg",
          "contextualTitle": "Artemis"
        }
      ]
    },
    "commands": [
      {
        "command": "scorpio.login",
        "category": "Artemis",
        "title": "Login"
      },
      {
        "command": "scorpio.logout",
        "category": "Artemis",
        "title": "Logout"
      },
      {
        "command": "scorpio.selectExercise",
        "category": "Artemis",
        "title": "Select Exercise"
      },
      {
        "command": "scorpio.currentExercise.clone",
        "category": "Artemis",
        "title": "Clone Current Exercise"
      },
      {
        "command": "scorpio.workspace.submit",
        "category": "Artemis",
        "title": "Submit Workspace",
        "icon": "$(repo-push)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "scorpio.workspace.submit",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "webpack --mode production",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile",
    "package": "vsce package",
    "vscode:prepublish": "npm run build",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.7",
    "@types/vscode": "^1.91.0",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vscode/test-web": "^0.0.56",
    "assert": "^2.1.0",
    "eslint": "^8.56.0",
    "html-loader": "^5.1.0",
    "mocha": "^10.7.0",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/vsce": "^2.31.1",
    "dotenv": "^16.4.5",
    "fetch-cookie": "^3.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0"
  },
  "extensionDependencies": ["vscode.git"],
  "bugs": {
    "url": "https://github.com/ls1intum/scorpio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ls1intum/scorpio.git"
  }
}
